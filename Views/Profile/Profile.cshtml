@model MonkeyAssenbly.Models.ProfileModel
@{
    Layout = null;
    ViewData["Title"] = "Profile Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/128/166/166749.png">
    <link rel="stylesheet" href="~/css/profile.css">
    <link rel="stylesheet" href="~/css/loading.css">
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        window.HomeUrl = '@ViewBag.HomeUrl';
        window.TagsUrl = '@ViewBag.TagsUrl';
        window.NotifyUrl = '@ViewBag.NotifyUrl';
        window.ProfileUrl = '@ViewBag.ProfileUrl';
        window.LoginUrl = '@ViewBag.LoginUrl';
        window.SignupUrl = '@ViewBag.SingupUrl';
        window.DetailHostUrl = '@ViewBag.DetailHostUrl';
    </script>
</head>
<script>
    const userSession = {
        userId: @(Context.Session.GetInt32("UserId") ?? 0),
        firstName: '@Context.Session.GetString("FirstName")',
        lastName: '@Context.Session.GetString("LastName")',
        email: '@Context.Session.GetString("Email")'
    };

    console.log("User Session:", userSession);
</script>

<body data-user-id="123" data-role="host">
    <!-- Header -->
    <header class="navbar">
        <div class="logo">
            <a href="@Url.Action("Home", "Home")">
                <img src="/picture/logo.png" alt="Monkey Assemble Logo">
            </a>
        </div>

        <input type="checkbox" id="toggle">
        <label class="toggle" for="toggle">
            <i class="bx bxs-sun"></i>
            <i class="bx bx-moon"></i>
            <span class="ball"></span>
        </label>
    </header>

    <!-- Sidebar Menu -->
    <nav>
        <div class="sidebar">
            <a href="@Url.Action("Home", "Home")"><i class="fa-solid fa-home"></i></a>
            <a href="@Url.Action("Tags", "Tags")"><i class="fa-solid fa-tag"></i></a>
            <a href="#" class="add"><i class="fa-solid fa-plus"></i></a>
            <a href="@Url.Action("Notify", "Notify")"><i class="fa-solid fa-bell"></i></a>
            <a href="@Url.Action("Profile", "Profile")" class="active"><i class="fa-solid fa-user"></i></a>
        </div>
    </nav>

    <!-- Profile Card -->
    <main class="profile-container">
        <div class="profile-card">
            <img src="@Model.AvatarUrl" id="profile-pic" class="profile-pic">
            <!-- แสดงชื่อผู้ใช้จาก Session -->
            <h2 id="profile-username">@Model.FirstName @Model.LastName</h2>
            <!-- แสดง Email เป็น bio -->
            <p id="profile-bio">@Model.Bio</p>

            <div class="follow-info">
                <span><strong id="followers-count">0</strong> Followers</span>
                <span><strong id="following-count">0</strong> Following</span>
            </div>

            <button id="edit-btn" class="edit-btn">Edit Profile</button>
            <button id="follow-btn" class="follow-btn hidden">Follow</button>

            <!-- Tabs -->
            <div class="tabs">
                <button class="tab active" data-tab="your-posts">Your Post</button>
                <button class="tab" data-tab="history">Participation History</button>
            </div>

            <!-- Post Containers -->
            <div id="your-posts" class="tab-content active"></div>
            <div id="history" class="tab-content"></div>
        </div>
    </main>

    <!-- Edit Profile Modal -->
    <div class="modal">
        <div class="modal-content">
            <h3>แก้ไขโปรไฟล์</h3>

             <label for="first-name">First Name</label>
            <input type="text" id="first-name" value="@Model.FirstName" placeholder="First Name">

            <label for="last-name">Last Name</label>
            <input type="text" id="last-name" value="@Model.LastName" placeholder="Last cName">
            
            <label for="bio">คำอธิบายตัวเอง</label>
            <textarea id="bio" rows="3">@Model.Bio</textarea>

            <label for="avatar-url">Avatar URL</label>
            <input type="text" id="avatar-url" class="form-control" value="@Model.AvatarUrl" />

            <div class="btn-group">
                <button class="btn-cancel">ยกเลิก</button>
                <button class="btn-save">บันทึก</button>
            </div>
        </div>
    </div>

    <!-- Hamburger Menu -->
    <div class="hamburger" id="hamburgerBtn">
        <i class="fa-solid fa-bars"></i>
    </div>

    <div class="hamburger-menu" id="hamburgerMenu">
        <ul id="menuList">
        </ul>
    </div>

    <div id="toast" class="toast hidden">บันทึกข้อมูลเรียบร้อยแล้ว</div>

    <div class="confirm-modal" id="confirmModal">
        <div class="confirm-modal-content">
            <div class="confirm-icon">
                <i class="fa-solid fa-triangle-exclamation"></i>
            </div>
            <h3 id="confirmTitle">ยืนยันการลบ</h3>
            <p id="confirmMessage">คุณต้องการลบโพสต์นี้ใช่หรือไม่?</p>
            <div class="confirm-btn-group">
                <button class="btn-confirm-cancel">Cancel</button>
                <button class="btn-confirm-ok">OK</button>
            </div>
        </div>
    </div>


    <script src="/js/profile.js"></script>
