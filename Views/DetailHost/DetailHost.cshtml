@{
    Layout = null;
    ViewData["Title"] = "DetailHost";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Detail</title>
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/128/166/166749.png">
    <link rel="stylesheet" href="/css/detailhost.css">
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        window.HomeUrl = '@ViewBag.HomeUrl';
        window.TagsUrl = '@ViewBag.TagsUrl';
        window.NotifyUrl = '@ViewBag.NotifyUrl';
        window.ProfileUrl = '@ViewBag.ProfileUrl';
        window.LoginUrl = '@ViewBag.LoginUrl';
        window.SignupUrl = '@ViewBag.SignupUrl';
        window.DetailHostUrl = '@ViewBag.DetailHostUrl';

    </script>
</head>

<
<body data-post-id="@ViewBag.PostId">
    >
    <!-- Header -->
    <header class="navbar">
        <div class="logo">
            <a href="@Url.Action("Home", "Home")">
                <img src="/picture/logo.png" alt="Monkey Assemble Logo">
            </a>
        </div>

        <input type="checkbox" id="toggle">
        <label class="toggle" for="toggle">
            <i class="bx bxs-sun"></i>
            <i class="bx bx-moon"></i>
            <span class="ball"></span>
        </label>
    </header>

    <!-- Sidebar Menu -->
    <nav>
        <div class="sidebar">
            <a href="@Url.Action("Home", "Home")" class="active"><i class="fa-solid fa-home"></i></a>
            <a href="@Url.Action("Tags", "Tags")"><i class="fa-solid fa-tag"></i></a>
            <a href="#" class="add"><i class="fa-solid fa-plus"></i></a>
            <a href="@Url.Action("Notify", "Notify")"><i class="fa-solid fa-bell"></i></a>
            <a href="@Url.Action("Profile", "Profile")"><i class="fa-solid fa-user"></i></a>
        </div>
    </nav>

    <!-- Content -->
    <main class="container">
        <section class="detail-card">
            <input type="text" name="activity-title" value="" id="activityTitle" />
            <select id="tagSelect">
                <option disabled selected>-- เลือกแท็ก --</option>
            </select>



            <div class="meta-grid">
                <div class="left-meta">
                    <div class="deadline">
                        <strong>Application Deadline</strong>
                        <input type="date" name="activityDeadline" value="" id="activityDeadline" />
                    </div>
                    <div class="host">
                        <strong>Host :</strong>
                        <p id="activityHost"></p>
                    </div>
                </div>
                <div class="right-meta">
                    <div class="place">
                        <strong>Place :</strong>
                        <input type="text" name="activityPlace" value="" id="activityPlace" />
                    </div>
                </div>
            </div>

            <div class="details">
                <strong>Details :</strong>
                <input type="text" name="activityDetails" value="" id="activityDetails" />
            </div>

            <div class="participants-box">
                <div class="participants-approved" id="approvedBox">
                    <div class="participants-header">
                        <div class="participants-label">Participants</div>
                        <div class="participants-count" id="approvedCount">0</div>
                    </div>
                </div>

                <div class="participants-pending" id="pendingBox">
                    @* <div class="participants-label">รอการอนุมัติ</div> *@
                </div>
            </div>

            <div class="comment-box">
                <h3>Comments</h3>
                <div class="comment-list" id="commentList"></div>
                <div class="comment-input">
                    <input id="commentInput" placeholder="พิมพ์ความคิดเห็น..." autocomplete="off" />
                    <button id="sendComment" aria-label="Send comment"><i class="fa-regular fa-paper-plane"></i></button>
                </div>
            </div>

            <div class="actions">
                <button class="update">Update</button>
                <button class="leave">Close</button>
                <button class="end">End Registration</button>
            </div>
        </section>
    </main> 

    <!-- Hamburger Menu -->
    <div class="hamburger" id="hamburgerBtn">
        <i class="fa-solid fa-bars"></i>
    </div>

    <div class="hamburger-menu" id="hamburgerMenu">
        <ul id="menuList">
        </ul>
    </div>

    <script src="/js/detailhost.js"></script>
    @* <script>
        // console.log("กำลังแก้ไขโพสต์ ID:", postId);
    </script> *@
</body>

</html>
