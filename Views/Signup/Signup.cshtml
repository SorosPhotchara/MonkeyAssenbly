@model MonkeyAssenbly.Models.SignupModel

@{
    Layout = null;
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/signup.css" />
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="signup-container">
        <h2 class="signup-title">Sign Up</h2>

        @if (ViewBag.Error != null)
        {
            <p style="color: red">@ViewBag.Error</p>
        }

        <form asp-action="SignupSubmit" method="post">
            @Html.AntiForgeryToken()

            <label asp-for="Username"></label>
            <input asp-for="Username" required />
            
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" required />
            
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" required />
            
            <label asp-for="LastName"></label>
            <input asp-for="LastName" required />
            
            <label asp-for="Gender"></label>
            <select asp-for="Gender" required>
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
            </select>
            
            <label asp-for="Birthdate"></label>
            <input asp-for="Birthdate" type="date" required />
            
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" required />
            
            <label asp-for="AvatarUrl"></label>
            <input asp-for="AvatarUrl" value="https://www.shutterstock.com/image-vector/user-profile-icon-vector-avatar-600nw-2558760599.jpg" />
            
            <label asp-for="Bio"></label>
            <textarea asp-for="Bio" rows="3"></textarea>

            <button type="submit" class="btn-submit">Sign Up</button>
        </form>

        <p class="signin-text">
            Already have an account? <a href="/Login/Login">Login here</a>
        </p>
    </div>
</body>
</html>
