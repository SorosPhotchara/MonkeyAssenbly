@model MonkeyAssenbly.Models.SignupModel

@{
    Layout = null;
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/signup.css" />
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/128/166/166749.png">
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Header -->
    <header class="navbar">
        <div class="logo">
            <a href="#">
                <img src="/picture/logo.png" alt="Monkey Assemble Logo">
            </a>
        </div>

        <input type="checkbox" id="toggle">
        <label class="toggle" for="toggle">
            <i class="bx bxs-sun"></i>
            <i class="bx bx-moon"></i>
            <span class="ball"></span>
        </label>
    </header>

    <div class="signup-container">
        <h2 class="signup-title">Sign Up</h2>

        @if (ViewBag.Error != null)
        {
            <p style="color: red">@ViewBag.Error</p>
        }

        <form asp-action="SignupSubmit" method="post">
            @Html.AntiForgeryToken()

            <div class="input-group">
                <input asp-for="Username" placeholder=" " required />
                <label asp-for="Username"></label>
            </div>
            
            <div class="input-group">
                <input asp-for="Password" type="password" placeholder=" " required />
                <label asp-for="Password"></label>
            </div>
            
            <div class="input-group">
                <input asp-for="FirstName" placeholder=" " required />
                <label asp-for="FirstName"></label>
            </div>
            
            <div class="input-group">
                <input asp-for="LastName" placeholder=" " required />
                <label asp-for="LastName"></label>
            </div>
            
            <div class="input-group">
                <select asp-for="Gender" required>
                    <option value="">-- Select Gender --</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
                <label asp-for="Gender"></label>
            </div>
            
            <div class="input-group">
                <input asp-for="Birthdate" type="date" required />
                <label asp-for="Birthdate"></label>
            </div>
            
            <div class="input-group">
                <input asp-for="Email" type="email" placeholder=" " required />
                <label asp-for="Email"></label>
            </div>
            
            <div class="input-group">
                <input asp-for="AvatarUrl" placeholder=" " value="https://www.shutterstock.com/image-vector/user-profile-icon-vector-avatar-600nw-2558760599.jpg" />
                <label asp-for="AvatarUrl"></label>
            </div>
            
            <div class="input-group">
                <textarea asp-for="Bio" rows="3" placeholder=" "></textarea>
                <label asp-for="Bio"></label>
            </div>

            <button type="submit" class="btn-submit">Sign Up</button>
        </form>

        <p class="signin-text">
            Already have an account? <a href="/Login/Login">Login here</a>
        </p>
    </div>
    
    <script src="/js/signup.js"></script>

</body>
</html>
